---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <style>
      .cssbackground {
        background-image: linear-gradient(
          45deg,
          hsl(240deg 100% 20%) 0%,
          hsl(289deg 100% 21%) 11%,
          hsl(315deg 100% 27%) 22%,
          hsl(329deg 100% 36%) 33%,
          hsl(337deg 100% 43%) 44%,
          hsl(357deg 91% 59%) 56%,
          hsl(17deg 100% 59%) 67%,
          hsl(34deg 100% 53%) 78%,
          hsl(45deg 100% 50%) 89%,
          hsl(55deg 100% 50%) 100%
        );
      }
    </style>
  </head>
  <body>
    <div class="cssbackground"></div>
    <div class="content">
      <slot />
    </div>
    <style is:global>
      :root {
        --accent: 136, 58, 234;
        --accent-light: 224, 204, 250;
        --accent-dark: 49, 10, 101;
        --accent-gradient: linear-gradient(
          45deg,
          rgb(var(--accent)),
          rgb(var(--accent-light)) 30%,
          white 60%
        );
      }
      main {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
      }

      .link-card-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1rem;
        padding: 0;
        margin: 0;
        list-style: none;
      }
      html {
        font-family: system-ui, sans-serif;
        background: #13151a;
        background-size: 224px;
      }
      code {
        font-family:
          Menlo,
          Monaco,
          Lucida Console,
          Liberation Mono,
          DejaVu Sans Mono,
          Bitstream Vera Sans Mono,
          Courier New,
          monospace;
      }
      .cssbackground {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
      }
      main {
        margin: auto;
        padding: 1rem;
        width: 800px;
        max-width: calc(100% - 2rem);
        color: white;
        font-size: 20px;
        line-height: 1.6;
      }

      @keyframes blur-in {
        0% {
          filter: blur(130px);
          opacity: 0;
          transform: scale(1);
        }
        50% {
          transform: scale(1.35);
        }
        ,
        100% {
          filter: blur(0px);
          opacity: 1;
        }
      }

      /*Apply view transition to .content*/
      .content {
        animation: blur-in 0.3s ease-out;
      }
    </style>
  </body>
</html>
